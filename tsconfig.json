{
    "compilerOptions": {
        "outDir": "out",
        "allowJs": false,
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "importHelpers": true,
        "lib": ["es2017", "dom"],
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./build/**/*"
    ]
}